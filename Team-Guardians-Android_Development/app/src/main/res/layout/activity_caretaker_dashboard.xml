<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.caretaker.CaretakerDashboardActivity">


  <androidx.cardview.widget.CardView
      android:id="@+id/medicalDiaganosticsHeaderCardView"
      android:layout_width="0dp"
      android:layout_height="220dp"
      android:layout_marginTop="-40dp"
      app:cardBackgroundColor="@color/TG_blue"
      app:cardCornerRadius="40dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/medicalDiagnosticsTitleTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:fontFamily="@font/poppins_bold"
          android:text="Welcome ***usert***"
          android:textColor="@color/white"
          android:textSize="20sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/medicalDiagnosticsEditImageView" />

      <ImageView
          android:id="@+id/medicalDiagnosticsEditImageView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="54dp"
          app:layout_constraintBottom_toTopOf="@+id/medicalDiagnosticsTitleTextView"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.498"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/profile_avatar_women" />

      <Button
          android:id="@+id/caretakerDashboardNotificationsButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginBottom="68dp"
          android:onClick="onNotificationsClick"
          android:text="Test: Notifications"
          android:textSize="10sp"
          app:layout_constraintBottom_toBottomOf="@+id/medicalDiagnosticsEditImageView"
          app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>

  <TextView
      android:id="@+id/selectAPatientTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="68dp"
      android:onClick="onSelectAPatientClick"
      android:text="Select a Patient"
      android:textColor="#2B86AC"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.503"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/medicalDiaganosticsHeaderCardView" />

  <TextView
      android:id="@+id/editCaretakerProfileTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onCaretakerProfileEditClick"
      android:text="Edit Caretaker Profile"
      android:textColor="#2B86AC"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.503"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/selectAPatientTextView"
      app:layout_constraintVertical_bias="0.214" />


</androidx.constraintlayout.widget.ConstraintLayout>


