<?xml version="1.0" encoding="utf-8"?>


    <!-- TODO: Update blank fragment layout -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dailyReportScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@drawable/rounded_bg"
    tools:context=".view.patient.dailyreport.DailyReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/medicalDiaganosticsHeaderCardView"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:layout_marginTop="-40dp"
            app:cardBackgroundColor="@color/TG_blue"
            app:cardCornerRadius="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="219dp">

                <ImageView
                    android:id="@+id/medicalDiagnosticsEditImageView"
                    android:layout_width="82dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintBottom_toTopOf="@+id/medicalDiagnosticsTitleTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/gopher_logo" />

                <TextView
                    android:id="@+id/medicalDiagnosticsTitleTextView"
                    android:layout_width="233dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Welcome to Patient checker"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.582"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/medicalDiagnosticsEditImageView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <CalendarView
                android:id="@+id/calendarView2"
                android:layout_width="408dp"
                android:layout_height="245dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:clickable="false"
                android:dateTextAppearance="@style/CalenderViewDateCustomText"
                android:focusable="false"
                android:theme="@style/CalenderViewCustom"
                android:weekDayTextAppearance="@style/CalenderViewWeekCustomText" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:text="Email/ID"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/progressNotesTextarea4"
            android:layout_width="366dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/rectangle"
            android:inputType="text|textMultiLine"
            android:maxLength="500"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:text="Current Status"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/progressNotesTextarea"
            android:layout_width="365dp"
            android:layout_height="163dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/rectangle"
            android:inputType="text|textMultiLine"
            android:maxLength="500"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/progressTextCount"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30sp"
            android:text="0/500"
            android:textAlignment="viewEnd" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="@color/light_blue_900"
            android:text="Submit"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="14dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/urgent_patient_status"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-11dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#BFEFFF"
                android:text="My Button" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/urgent_patient_status"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-11dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#BFEFFF"
                android:text="My Button" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/urgent_patient_status"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-11dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#BFEFFF"
                android:text="My Button" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/urgent_patient_status"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-11dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#BFEFFF"
                android:text="My Button" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="14dp" />


    </LinearLayout>
</ScrollView>